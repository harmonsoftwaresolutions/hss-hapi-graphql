{
  "name": "hss-hapi-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/harmonsoftwaresolutions/hss-hapi-graphql.git",
  "author": "Evan Harmon <evan.p.harmon@gmail.com>",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "import/no-unresolved": 0,
      "import/extensions": 0,
      "import/no-extraneous-dependencies": "off",
      "no-console": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "parser": "flow",
          "trailingComma": "all",
          "bracketSpacing": true
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ]
    }
  },
  "devDependencies": {
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2"
  },
  "scripts": {
    "start": "node index.js",
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "hapi": "^17.2.0"
  }
}
