{
  "name": "hss-hapi-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/harmonsoftwaresolutions/hss-hapi-graphql.git",
  "author": "Evan Harmon <evan.p.harmon@gmail.com>",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "import/no-unresolved": 0,
      "import/extensions": 0,
      "import/no-extraneous-dependencies": "off",
      "no-console": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "parser": "flow",
          "trailingComma": "all",
          "bracketSpacing": true
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ]
    }
  },
  "scripts": {
    "start": "concurrently --kill-others \"yarn run dev\" \"yarn run dev-server\"",
    "dev": "node index.js",
    "inspect": "node --inspect-brk index.js",
    "debug": "concurrently --kill-others \"yarn run dev-server\" \"yarn run inspect\"",
    "lint": "eslint .",
    "dev-server": "json-server -p 8081 db.json",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^1.1.0",
    "ava": "^0.24.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-register": "^6.26.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2"
  },
  "dependencies": {
    "apollo-server-hapi": "^1.3.2",
    "concurrently": "^3.5.1",
    "graphql": "^0.12.3",
    "graphql-tools": "^2.14.1",
    "hapi": "^17.2.0",
    "json-server": "^0.12.1",
    "node-fetch": "^1.7.3",
    "winston": "^3.0.0-rc1"
  },
  "engines": {
    "yarn": "^1.3.2",
    "node": "^8.9.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  }
}
